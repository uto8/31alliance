<section class="bg-white dark:bg-gray-900">
  <div class="max-w-2xl px-4 py-8 mx-auto lg:py-16">
<div class=" bg-white flex flex-col md:ml-auto w-full md:py-8 mt-8 md:mt-0">
      <h2 class="text-gray-900 text-lg mb-1 font-medium title-font">伝統作成</h2>
      <p class="leading-relaxed mb-5 text-gray-600">伝統を作成してください</p>
      <%= form_for(@tradition, url: {controller: 'traditions', action: 'index' }) do |f| %>
       <div class="grid gap-4 mb-4 sm:grid-cols-2 sm:gap-6 sm:mb-5">
           <div class="sm:col-span-2">
                <%= f.label :image_url,'画像', :class=>"block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
                <%= f.text_field :image_url, :class=>"w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out", autofocus: true, autocomplete: "email" %>
            </div>
            <div class="sm:col-span-2">
                <%= f.label :title,'伝統名', :class=>"block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
                <%= f.text_field :title, :class=>"w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out", autofocus: true, autocomplete: "email" %>
            </div>
            <div class="sm:col-span-2">
                <%= f.label :area,'地域名', :class=>"block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
                <%= f.text_field :area, :class=>"w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out", autofocus: true, autocomplete: "email" %>
            </div>
            <div class="sm:col-span-2">
                  <%= f.label :description, "説明",:class=>"leading-7 text-sm text-gray-600" %>
                  <%= f.text_area :description, :class=>"w-full bg-gray-100 bg-opacity-50 rounded border border-gray-300 focus:border-indigo-500 focus:bg-white focus:ring-2 focus:ring-indigo-200 h-32 text-base outline-none text-gray-700 py-1 px-3 resize-none leading-6 transition-colors duration-200 ease-in-out",:placeholder=>'伝統の説明を書いてください' ,autofocus: true %>
            </div>
        </div>
        <div class="flex items-center space-x-4">
            <%= f.submit "伝統追加", :class=>"text-white bg-gradient-to-r from-cyan-500 to-blue-500 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-cyan-300 dark:focus:ring-cyan-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2" %>
        </div>
      <% end %>
    </div>
</div></section>
